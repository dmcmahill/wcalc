dir-pixmaps:
	@echo "Making all in pixmaps"
	#cd pixmaps && ${MAKE} all

clean::
	@echo "Cleaning in pixmaps"
	#cd pixmaps && ${MAKE} clean

wcalc.c:: dir-pixmaps
#
###########################################

###########################################
# the CGI frontends
#
all:: dir-cgi

clean::
	@echo "Cleaning in cgi"
	cd cgi && ${MAKE} clean

dir-cgi: dir-pixmaps $(PROG)
	@echo "Making all in cgi"
	cd cgi && ${MAKE} all

